<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>IslandTopGUI-Reactor</artifactId>
    <groupId>IslandTopGUI</groupId>
    <version>parent</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>IslandTopGUI</artifactId>
  <name>IslandTopGui - Plugin</name>
  <version>${islandtop-version}</version>
  <build>
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>src/main/resources</directory>
        <includes>
          <include>plugin.yml</include>
        </includes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.4.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <dependencyReducedPomLocation>${project.build.directory}/dependency-reduced-pom.xml</dependencyReducedPomLocation>
          <relocations>
            <relocation>
              <pattern>spawnerapi</pattern>
              <shadedPattern>IslandTop.api.spawnerapi</shadedPattern>
            </relocation>
          </relocations>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>jitpack.io</id>
      <url>https://jitpack.io</url>
    </repository>
    <repository>
      <id>placeholderapi</id>
      <url>https://repo.extendedclip.com/content/repositories/placeholderapi/</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>me.clip</groupId>
      <artifactId>placeholderapi</artifactId>
      <version>LATEST</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>annotations</artifactId>
          <groupId>org.jetbrains</groupId>
        </exclusion>
        <exclusion>
          <artifactId>bstats-bukkit</artifactId>
          <groupId>org.bstats</groupId>
        </exclusion>
        <exclusion>
          <artifactId>adventure-platform-bukkit</artifactId>
          <groupId>net.kyori</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>Spigot1.8.8</groupId>
      <artifactId>Spigot1.8.8</artifactId>
      <version>LATEST</version>
      <scope>system</scope>
      <systemPath>G:/Development - ServerJars/spigot-1.8.8.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>IslandTop</groupId>
      <artifactId>IslandTop</artifactId>
      <version>LATEST</version>
      <scope>system</scope>
      <systemPath>C:/Users/Brian/Documents/IslandTop - Reactor/IslandTop/target/IslandTop-2.29.0.jar</systemPath>
    </dependency>
  </dependencies>
</project>

